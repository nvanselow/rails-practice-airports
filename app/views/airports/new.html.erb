<h1>New Airport Form</h1>

<%= form_for @airport do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "Add Airport" %>
<% end %>

<%= render partial: 'application/form_errors', locals: {errors: @errors} %>
